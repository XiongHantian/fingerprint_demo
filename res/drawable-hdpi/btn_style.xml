<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true">
  <shape>
      <gradient android:startColor="#404040" android:endColor="#808080" android:angle="90"/>
      <stroke android:width="1dip" android:color="#808080"/>
      <corners android:radius="5dp" android:topLeftRadius="5dp"/>
      <padding android:left="5dp" android:top="5dp" android:right="5dp"
               android:bottom="10dp"/>
  </shape>
  </item>
  
   <item android:state_focused="true">
  <shape>
      <gradient android:startColor="#404040" android:endColor="#808080" android:angle="90"/>
      <stroke android:width="2dip" android:color="#808080"/>
      <corners android:radius="5dp"/>
      <padding android:left="5dp" android:top="5dp" android:right="5dp"
               android:bottom="5dp"/>
  </shape>
  </item>
  
  <item>
  <shape>
      <gradient android:startColor="#000000" android:endColor="#404040" android:angle="90"/>
      <stroke android:width="1dip" android:color="#404040"/>
      <corners android:radius="5dp"/>
      <padding android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp"/>
  </shape>
  </item>
</selector>
